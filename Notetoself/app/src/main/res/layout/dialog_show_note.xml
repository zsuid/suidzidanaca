<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_warning_black_24dp"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="16dp"
        android:id="@+id/imageViewImportant"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_warning_black_24dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_check_box_outline_blank_black_24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/imageViewTodo"
        android:layout_alignTop="@+id/imageViewImportant"
        android:layout_toRightOf="@+id/imageViewImportant"
        android:layout_toEndOf="@+id/imageViewImportant"
        android:src="@drawable/ic_check_box_outline_blank_black_24dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_wb_incandescent_black_24dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/imageViewIdea"
        android:layout_alignTop="@+id/imageViewTodo"
        android:layout_toRightOf="@+id/imageViewTodo"
        android:layout_toEndOf="@+id/imageViewTodo"
        android:src="@drawable/ic_wb_incandescent_black_24dp"/>

    <Button
        android:text="@string/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:id="@+id/btnOk"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:id="@+id/imageViewPhoto"
        android:layout_below="@+id/imageViewIdea"
        android:layout_toRightOf="@+id/btnOk"
        android:layout_toEndOf="@+id/btnOk"
        android:layout_marginTop="51dp"/>

    <TextView
        android:text=" "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:layout_alignBottom="@+id/imageViewPhoto"
        android:layout_alignLeft="@+id/imageViewImportant"
        android:layout_alignStart="@+id/imageViewImportant"
        android:layout_marginBottom="13dp"
        android:hint="@string/title_hint"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:ems="10"
        android:id="@+id/txtDescription"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/imageViewPhoto"
        android:layout_alignLeft="@+id/txtTitle"
        android:layout_alignStart="@+id/txtTitle"
        android:hint="@string/description_hint"/>
</RelativeLayout>