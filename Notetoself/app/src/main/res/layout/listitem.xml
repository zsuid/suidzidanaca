<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewImportant"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="320dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_warning_black_24dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewTodo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="151dp"
        android:src="@drawable/ic_check_box_outline_blank_black_24dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewData"
        android:layout_alignBottom="@+id/imageViewTodo"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_wb_incandescent_black_24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtTitle"
        android:layout_below="@+id/imageViewImportant"
        android:layout_toStartOf="@+id/imageViewTodo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtDescription"
        android:layout_alignEnd="@+id/txtTitle"
        android:layout_below="@+id/txtTitle"
        android:layout_alignStart="@+id/txtTitle"/>
</RelativeLayout>