<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="calc.aca.android.zidansuid.com.magicanddice.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Main Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp"
            android:id="@+id/textView3"
            android:gravity="center"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textStyle="normal|bold"/>

        <Button
            android:text="Magic Eight Ball"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp"
            android:id="@+id/btnMagic"
            android:textSize="24sp"/>

        <Button
            android:text="Roll Two Dices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnMagic"
            android:layout_marginBottom="83dp"
            android:id="@+id/btnDice"
            android:layout_alignEnd="@+id/btnMagic"
            android:textSize="24sp"/>
    </RelativeLayout>
</LinearLayout>
