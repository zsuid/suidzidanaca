<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="calc.aca.android.zidansuid.com.sounddemo.MainActivity">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:id="@+id/spinner"
        android:entries="@array/spinner_options"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentStart="true"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_above="@+id/btnFX2 "
        android:layout_alignStart="@+id/btnStop"
        android:layout_marginBottom="87dp"
        android:max="10"/>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFX1"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btnStop"
        android:layout_marginEnd="15dp"/>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFX2 "
        android:layout_alignBaseline="@+id/btnFX1"
        android:layout_alignBottom="@+id/btnFX1"
        android:layout_alignStart="@+id/seekBar"/>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFX3"
        android:layout_alignBaseline="@+id/btnFX2 "
        android:layout_alignBottom="@+id/btnFX2 "
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnFX2 "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="159dp"
        android:id="@+id/btnStop"/>

</RelativeLayout>
